<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#C0C0C2"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/bottom_menu" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/esake_ban" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView3"
        android:layout_above="@id/bottom_navigation">
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottom_navigation"
            android:layout_below="@id/imageView3"
            android:orientation="vertical">


            <TextView
                android:id="@+id/welcometxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView3"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="Καλωσήρθατε στην επίσημη εφαρμογή του ΕΣΑΚΕ , το σπίτι της Basket League!"
                android:textColor="#0F2495"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcometxt"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:text="Εδώ μπορείτε να ενημερώνεστε σε πραγματικό χρόνο για όλες τις εξελίξεις του ελληνικού πρωταθλήματος μπάσκετ.Τσέκαρε την βαθμολογία του πρωταθλήματος , μάθε το πρόγραμμα των αγώνων , περιηγήσου στα ρόστερ των ομάδων και ανακάλυψε όλα τα στατιστικά για την ομάδα σου και τους πάικτες της."
                android:textColor="#565656"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:text="Μην χάνεις λεπτό από την αγωνιστική δράση, παρακαλούθησε live την εξέλιξη και τα στατιστικά όλων των αγώνων της λίγκας."

                android:textColor="#565656" />

            <TextView
                android:id="@+id/slogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt2"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Γίνε μέλος της μεγαλύτερης μπασκετικής παρέας!"
                android:textColor="#0F2495"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>